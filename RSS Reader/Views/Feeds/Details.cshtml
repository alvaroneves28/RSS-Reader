@model IEnumerable<RSS_Reader.Entities.Article>
@{
    var feed = ViewBag.Feed as RSS_Reader.Entities.Feed;
    ViewData["Title"] = feed?.Name ?? "Feed Details";
}

<h2>@feed?.Name</h2>

@* Filter form for articles *@
<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <input type="date" name="from" value="@ViewBag.From" class="form-control" />
    </div>
    <div class="col-auto">
        <input type="date" name="to" value="@ViewBag.To" class="form-control" />
    </div>
    <div class="col-auto">
        <input type="text" name="q" value="@ViewBag.Query" placeholder="Search articles..." class="form-control" />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-outline-secondary">Filter</button>
    </div>
</form>

@* Form to reload articles from RSS feed *@
<form asp-action="Reload" method="post">
    <input type="hidden" name="id" value="@feed?.Id" />
    <button type="submit" class="btn btn-warning mb-3">Reload Articles</button>
</form>

@* Display success message if articles were reloaded *@
@if (TempData["ReloadMessage"] != null)
{
    <div class="alert alert-success">@TempData["ReloadMessage"]</div>
}

@* Table of articles *@
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Link</th>
            <th>Published</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model)
        {
            <tr>
                <td>@article.Title</td>
                <td><a href="@article.Link" target="_blank">View</a></td>
                <td>@article.PublishedAt?.ToString("yyyy-MM-dd HH:mm")</td>
            </tr>
        }
    </tbody>
</table>