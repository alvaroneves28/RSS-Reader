@model RSS_Reader.Entities.Feed
@{
    ViewData["Title"] = "Delete Feed";
}

<h2>Delete Feed</h2>

<p>Are you sure you want to delete the feed <strong>@Model.Name</strong>?</p>

<form asp-action="Delete" method="post">
    @* Hidden input for the feed ID *@
    <input type="hidden" asp-for="Id" />

    @* Action buttons *@
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>